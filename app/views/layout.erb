  <body>
    <div class="wrapper">
      <p class="site-title"><a href="/"><img src="/images/site-logo.png" width="100"> Sinatra Forum</a></p>
      <% if is_logged_in? %>
      <form action="/logout" method="post">
        <input type="submit" value="Logout">
      </form>

      <a href="/posts/new"><button class="green">New Post</button></a>
      <a href="/users/<%= current_user.username %>"><button>Your Account</button></a>
      <% end %>
        <%= yield %>

      <footer class="branding">
        <small><strong>Sinatra Portfolio Project</strong> &copy; 2020 <strong>Aaron Schuyler</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
