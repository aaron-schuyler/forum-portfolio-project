<h1>Welcome to the forum, <%= current_user.username %>!</h1>
<% @posts.each do |post| %>
  <div class="post">
  <a href="/posts/<%= post.slug %>"><h2><%= post.title %></h2></a>
  <span class="metadata">Posted by: <a href="/users/<%= post.user.username %>"><%= post.user.username %></a> | <%= post.created_at.strftime("%b %d, %Y") %> | <%= post.comments.count %> Comments</span>
  <%= post.content.truncate_words(50) %>
  </div>
<% end %>
