<h1>Welcome to the forum!</h1>
<a href="/posts/new"><button>New Post</button></a>
<% @posts.each do |post| %>
  <div class="post">
  <a href="/posts/<%= post.slug %>"><h2><%= post.title %></h2></a>
  <span class="metadata">Posted by: <%= post.user.username %> | <%= post.created_at.strftime("%b %d, %Y") %> | <%= post.comments.count %> Comments</span>
  <%= post.content.truncate_words(50) %>
  </div>
<% end %>
